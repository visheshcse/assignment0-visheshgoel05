<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        >


        <EditText
            android:id="@+id/roomNumber"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Enter Room Number"
            android:inputType="number"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="10dp"/>

        <Button
            android:id="@+id/saveWarDrivingData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Wardriving for Room"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"/>


        <EditText
            android:id="@+id/getLocationK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter k value for knn"
            android:inputType="number"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"/>
        <Button
            android:id="@+id/getLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get Location"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"/>


        <!--<Button
            android:id="@+id/imuSensors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Use IMU Sensors"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"/>-->

        <TextView
            android:id="@+id/statusTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:background="@android:color/darker_gray"/>

        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/apChart"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            tools:ignore="MissingClass" />

        <Button
            android:id="@+id/scanWifi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scan Wifi"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/darker_gray"/>


    </LinearLayout>
</ScrollView>